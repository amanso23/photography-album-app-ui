---

interface Props {
    class: string;
}

const {
    class: className
} = Astro.props;

---

<section class={`w-full min-h-[100dvh] m-0 lg:m-2 p-6 md:p-[10vh] lg:p-[6vh] page ${className}`}>
    <slot />
</section>

<style>
    .page{
        background-size: 200% 200%;
        animation: move 30s infinite;
    }

    @keyframes move {
        0%{
            background-position: 0% 50%;
        }
        50%{
            background-position: 100% 50%;
        }
        100%{
            background-position: 0% 50%;
        }
    }
</style>