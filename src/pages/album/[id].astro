---

import ImageCard from '../../components/ImageCard.astro';
import Layout from '../../layouts/Layout.astro';
import { albums } from '../../lib/albums';

export const getStaticPaths = async() => {
    return albums.map((album) => {
        return {
            params: {id: album.id},
            props: {...album}
        };
    });
}

const {
    id
} = Astro.params;

const {
    title,
    tag,
    cover,
    artist,
    images,
    background
} = Astro.props;

---

<Layout title={title}>
    <div class={`flex flex-col gap-y-[6vh] flex-1 p-[6vh] ${background} page rounded-md mt-2 mr-2 mb-2`}>
       <div class="flex justify-between">
            <div class="flex flex-col gap-y-[3.5vh]">
                <h3 class="text-[5.5vh] font-bold">{tag}</h3>
                <h1 class="text-[14vh] font-bold ">{title}</h1>
                <h1 class="text-[3.8vh] opacity-75 font-light">{artist}</h1>
                <!-- <button class="text-xl px-10 py-1 self-start rounded-full bg-white/20 backdrop-blur-xs ">
                    Play
                </button> -->
            </div>
            <picture>
                <img src={cover} alt={title} class="rounded-sm w-[45vh] h-auto aspect-square">
            </picture>
       </div>


       <div class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-5 gap-4">	
            {images.map((image) => (
                <ImageCard image={image} />
            ))}
       </div>
    </div>
</Layout>

<style>
    .page{
        background-size: 200% 200%;
        animation: move 10s infinite backwards;
    }

    @keyframes move {
        0%{
            background-position: 0% 50%;
        }
        50%{
            background-position: 100% 50%;
        }
        100%{
            background-position: 0% 50%;
        }
    }
</style>



