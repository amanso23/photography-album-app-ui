---

import ImageCard from '../../components/ImageCard.astro';
import Layout from '../../layouts/Layout.astro';
import { albums } from '../../lib/albums';

export const prerender =  true;

export const getStaticPaths = async() => {
    return albums.map((album) => {
        return {
            params: {albumId: album.id},
            props: {...album}
        };
    });
}

const {
    albumId,
} = Astro.params;

const {
    title,
    cover,
    artist,
    gallery,
    background,
    description
} = Astro.props;

---

<Layout title={title}>
    <div class={`flex flex-col flex-1 gap-y-[12vh] p-6 md:p-[10vh] lg:p-[6vh] ${background} page m-2`}>
       <div class="flex flex-col gap-y-[8vh] lg:flex-row justify-between">
            <div class="flex flex-col gap-y-[4vh]">
                <h3 class="text-[4vh] md:text-[4.5vh] lg:text-[3.5vh] tracking-widest uppercase">{artist}</h3>
                <h1 class="text-[17vh] md:text-[22vh] lg:text-[14.5vh] font-bold leading-none md:w-full xl:w-[80vh]">{title}</h1>
                <p class="text-[2.5vh] md:text-[3vh] lg:text-[2.4vh] opacity-75 font-extralight lg:w-[70vh] mt-3 md:mt-6">{description}</p>
            </div>

            <picture>
                <img src={cover} alt={title} class="w-full lg:w-[53vh] h-auto aspect-square">
            </picture>
       </div>

       <h1 class="font-light text-[3vh]">Gallery</h1>
       <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-5 gap-2 -mt-[7vh]">	
            {gallery.map((image) => (
                <ImageCard image={image} albumId={albumId} />
            ))}
       </div>
    </div>
</Layout>

<style>
    .page{
        background-size: 200% 200%;
        animation: move 10s infinite;
    }

    @keyframes move {
        0%{
            background-position: 0% 50%;
        }
        50%{
            background-position: 100% 50%;
        }
        100%{
            background-position: 0% 50%;
        }
    }
</style>